autoload -U colors
colors

# Autoload functions
fpath=($ZSH/functions $fpath)
autoload -U $ZSH/functions/*(:t)

# Load libraries (which are group of functions)
for config_file ($ZSH/lib/*.zsh) source $config_file  
export EDITOR='vim'

# this permits prompt to be reevaluated each time it is displayed
function precmd {
#	RPROMPT=$'%{\e[1;33m%}$(git_info_for_prompt)%{\e[0m%}'
  RPROMPT=$'%{\e[38;5;208m%}$(git_info_for_prompt)%{$reset_color%}'
}
PROMPT=$'%{\e[38;5;199m%}$USERNAME:%{\e[1;32m%}${PWD/#$HOME/~}%{\e[0;31m%}$%{\e[0m%}'


HISTFILE=~/.zsh_history
HISTSIZE=500
SAVEHIST=500

setopt autocd
setopt auto_menu

setopt NO_LIST_BEEP

setopt HIST_VERIFY
setopt SHARE_HISTORY
setopt EXTENDED_HISTORY
setopt APPEND_HISTORY
setopt INC_APPEND_HISTORY
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_REDUCE_BLANKS


bindkey ';3D' backward-word
bindkey ';3C' forward-word
bindkey ';5D' beginning-of-line
bindkey ';5C' end-of-line

