[ui]
username = Pierre-Alexandre St-Jean <pastjean@coveo.com>
commitsubrepos = False
ignore = ~/.hgignore

[schemes]
cov = https://hg.corp.coveo.com/

[paths]
hg.corp.coveo.com = https://hg.corp.coveo.com/
mercurial.corp.coveo.com = https://mercurial.corp.coveo.com/

[hostsecurity]
hg.corp.coveo.com:minimumprotocol=tls1.0
mercurial.corp.coveo.com:minimumprotocol=tls1.0

[auth]
hg.corp.coveo.com.prefix = hg.corp.coveo.com
hg.corp.coveo.com.username = pastjean

[diff]
#git = True
#unified = 5

[extensions]
bookmarks =
churn =
color =
graphlog =
mq =
progress =
schemes =
fetch =
shelve =
strip =
#hggit =

[progress]
delay = 0.5

[default]
rebase = --keepbranches
addremove = --similarity 100

[pager]
pager=LESS='FSRX' less
ignore=version, help, update, push, pull, merge, fetch, convert, clone, record, crecord, grep, status, add, addremove, revert, commit, init

[color]
status.modified = cyan
status.added = green
status.removed = red
status.deleted = yellow bold underline
status.unknown = magenta bold underline
status.ignored = black bold
diff.diffline = none
diff.extended = cyan
diff.file_a = red
diff.file_b = green
diff.hunk = yellow bold
diff.deleted = red
diff.inserted = green
diff.changed = white
diff.trailingwhitespace = white_background

[bookmarks]
tack.current = True # bookmarks will not move , only the current one

[alias]
# Nudge: just push the current branch.
nudge = push --branch .

# Some useful little aliases.
st = status -SC
? = summary

# Run a colored diff and pipe it to less.
dl = !"$HG" diff -p --color=never $@ | vim -R -c 'set ft=diff' -

%include ~/.hgrc_local
